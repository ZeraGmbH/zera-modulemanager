#!/bin/sh

qtinstall_etc='@CMAKE_INSTALL_SYSCONFDIR@'

if [ "$1" = "" ]; then
   echo "$0 requires one parameter containing IP-address of target machine!!!"
   exit -1
fi

cd "$qtinstall_etc"

sed -i 's:<ip>.*</ip>:<ip>'$1'</ip>:g' `grep -rl '<ip>'`
sed -i 's:\"/etc:\"'$qtinstall_etc':g' `grep -rl '\"/etc'`


echo "IPs found: `grep -r '<ip>'$1'</ip>' | wc -l`"
echo "etc found: `grep -r "$qtinstall_etc" | wc -l`"

echo
echo "!!! Do not forget to set/reset CMake variable 'ZC_NO_CONFIG_INSTALL' in zera-classes !!!"

